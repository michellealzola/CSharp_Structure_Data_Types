<Page x:Class="WordLengthAnalyzer.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:WordLengthAnalyzer"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="25,25,25,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Open File"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   FontSize="18"
                   Grid.Row="0"
                   Grid.Column="0" />
        <Button x:ConnectionId='2' x:Name="Button_OpenFile"
                Grid.Row="0"
                Grid.Column="1"
                Content="Open File"
                Margin="10,0,0,0"
                Width="230"
                Background="#FF92CCF3"
                CornerRadius="5,5,5,5"
                FontSize="18"
                Foreground="#FF1A2544"
                                              />

        <TextBlock Text="Average Word Length"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   FontSize="18"
                   Grid.Row="1"
                   Grid.Column="0" />
        <Rectangle Grid.Row="1"
                   Grid.Column="1"
                   Stroke="#FF5D7885"
                   Margin="10,0,10,0"/>

        <TextBlock x:ConnectionId='3' x:Name="Output_AveWordLength"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   FontSize="18"
                   Grid.Row="1"
                   Grid.Column="1" />

        <Button x:ConnectionId='4' x:Name="Button_DisplayWordLength"
                Grid.Row="1"
                Grid.Column="2"
                Content="Display Word Length"
                Margin="10,0,0,0"
                Width="230"
                Background="#FF92CCF3"
                CornerRadius="5,5,5,5"
                FontSize="18"
                Foreground="#FF1A2544"
                                                      
                Height="50" />
        <ListView x:ConnectionId='5' Grid.Row="2"
                  Grid.ColumnSpan="3"
                  x:Name="ListView_Words"
                  Margin="10,10,10,10"
                  FontFamily="Cascadia Code ExtraLight"
                  FontSize="20"
                  Background="#FFF1F8FD">

        </ListView>

    </Grid>

</Page>

