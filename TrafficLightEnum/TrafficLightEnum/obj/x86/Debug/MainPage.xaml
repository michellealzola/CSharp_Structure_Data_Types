<Page x:Class="TrafficLightEnum.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TrafficLightEnum"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Ellipse x:ConnectionId='2' HorizontalAlignment="Center"
                 Height="200"
                 Margin="0,298,0,0"
                 Stroke="Black"
                 VerticalAlignment="Top"
                 Width="200"
                 Name="CircleColor"
                 RenderTransformOrigin="0.484,0.015" />
        <TextBlock x:ConnectionId='3' x:Name="Output_State"
                   HorizontalAlignment="Center"
                   Margin="0,247,0,0"
                   TextWrapping="Wrap"
                   Text="TextBlock"
                   VerticalAlignment="Top"
                   FontSize="22"
                   FontWeight="Bold" />
        <Button x:ConnectionId='4' Content="Change Color"
                HorizontalAlignment="Center"
                Margin="0,520,0,0"
                VerticalAlignment="Top"
                CornerRadius="2,2,2,2"
                Width="150"
                Background="#334494B7"
                FontSize="16"
                                          />

    </Grid>
</Page>

